<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Calculus.App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="300"
        Width="800"
        Height="300"
        CanResize="False"
        x:Class="Calculus.App.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Calculus">
        
        <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="Auto, Auto">
                <UserControl Height="280" Width="250" Content="{Binding Calculator}" Grid.Row="0" Grid.Column="0"/>
        </Grid>
</Window>
